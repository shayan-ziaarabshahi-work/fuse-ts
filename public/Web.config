<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>  
        <rewrite>  
            <rules>
                <clear />
                <rule name="Redirect APIs" stopProcessing="true">
                    <match url="appi/(.*)" />
                    <conditions logicalGrouping="MatchAll" trackAllCaptures="false" />
                    <action type="Redirect" url="https://webhrment.medu.ir/{R:1}" redirectType="Permanent" />
                </rule>
                <rule name="React Routes" stopProcessing="true">
                    <match url=".*" />
                    <conditions logicalGrouping="MatchAll" trackAllCaptures="false">
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
                        <add input="{REQUEST_URI}" pattern="^/(ap2)" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="/" />
                </rule>   
            </rules>  
        </rewrite>
        <caching>
            <profiles>
                <add extension=".json" policy="DisableCache" kernelCachePolicy="DisableCache" />
            </profiles>
        </caching>
    </system.webServer> 
</configuration>